{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "es2015",
            "es2015.promise",
            "dom",
            "es2015.reflect"
        ],
        "jsx": "react",
        "allowJs": true,
        "baseUrl": "src",
        "importHelpers": true,
        "sourceMap": true,
        "traceResolution": true,
        "strict": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ],
    "awesomeTypescriptLoaderOptions": {
        "silent": true
    }
}