{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "es2015",
            "es2015.promise",
            "dom"
        ],
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "importHelpers": true,
        "strictNullChecks": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src",
        "types"
    ],
    "awesomeTypescriptLoaderOptions": {
        "silent": true
    }
}